<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
	android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    >
    <LinearLayout
        android:id="@+id/listview_foot_progress_rootview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="visible"
        >
        <com.zhuxiaoqing.zxqrecyclerviewlibrary.view.SimpleViewSwitcher
            android:id="@+id/listview_foot_progress"
            android:layout_width="@dimen/listview_foot_progress_size"
            android:layout_height="@dimen/listview_foot_progress_size"
            />
        <TextView
            android:id="@+id/listview_foot_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="12sp"
            android:textColor="@color/loading_text_color_1"
            android:text="加载中..."/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/no_more_root_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/no_more_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/loading_text_color_1"
            android:text="@string/nomore_loading"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    
</LinearLayout>